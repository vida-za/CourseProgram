<UserControl x:Class="CourseProgram.Views.AddView.AddNomenclatureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProgram.Views.AddView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Grid.IsSharedSizeScope="True">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Style="{StaticResource Header}"
                       Text="Создание новой номенклатуры" />

            <GroupBox Grid.Row="1"
                      Header="Обязательные параметры"
                      Padding="5"
                      Margin="5">
                <Grid Margin="0 5 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"
                                       SharedSizeGroup="Row" />
                        <RowDefinition Height="auto"
                                       SharedSizeGroup="Row" />
                    </Grid.RowDefinitions>

                    <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                             Tag="Название"
                             Grid.Row="0"
                             Margin="5"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal">
                        <ComboBox Style="{StaticResource PlaceholderComboBoxStyle}"
                                  Tag="Тип"
                                  Margin="5"
                                  ItemsSource="{Binding TypeArray}"
                                  SelectedItem="{Binding Type}" />

                        <ComboBox Style="{StaticResource PlaceholderComboBoxStyle}"
                                  Tag="Категория"
                                  Margin="5"
                                  ItemsSource="{Binding CategoryCargoArray}"
                                  SelectedItem="{Binding CategoryCargo}" />

                        <ComboBox Style="{StaticResource PlaceholderComboBoxStyle}"
                                  Tag="Ед. измерения"
                                  Margin="5"
                                  ItemsSource="{Binding UnitArray}"
                                  SelectedItem="{Binding Unit}" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Grid Grid.Row="2"
                  Margin="0 10 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"
                                   SharedSizeGroup="Row" />
                    <RowDefinition Height="auto"
                                   SharedSizeGroup="Row" />
                    <RowDefinition Height="auto"
                                   SharedSizeGroup="Row" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Column" />
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Column" />
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Column" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Длина, м"
                         Margin="5"
                         Text="{Binding Length}" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Ширина, м"
                         Margin="5"
                         Text="{Binding Width}" />
                <TextBox Grid.Row="0"
                         Grid.Column="2"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Высота, м"
                         Margin="5"
                         Text="{Binding Height}" />

                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Вес, кг"
                         Margin="5"
                         Text="{Binding Weight}" />
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource PlaceholderComboBoxStyle}"
                          Tag="Вид упаковки"
                          Margin="5"
                          ItemsSource="{Binding PackArray}"
                          SelectedItem="{Binding Pack}" />
                <ComboBox Grid.Row="1"
                          Grid.Column="2"
                          Style="{StaticResource PlaceholderComboBoxStyle}"
                          Tag="Класс опасности"
                          Margin="5"
                          ItemsSource="{Binding DangerousClassArray}"
                          SelectedItem="{Binding DangerousClass}" />

                <TextBox Grid.Row="2"
                         Grid.Column="0"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Температурный режим"
                         Margin="5"
                         Text="{Binding NeedTemperature}" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Производитель"
                         Margin="5"
                         Text="{Binding Manufacturer}" />
                <DatePicker Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            SelectedDate="{Binding ExpiryDate, Converter={StaticResource DateConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        Margin="0 25 0 0">
                <Button Content="Добавить"
                        Command="{Binding SubmitCommand}" />
                <Button Margin="10 0 0 0"
                        Content="Отмена"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
