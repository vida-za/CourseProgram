<UserControl x:Class="CourseProgram.Views.AddView.AddMachineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:CourseProgram.ViewModels.AddViewModel"
             xmlns:local="clr-namespace:CourseProgram.Views.AddView"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:AddMachineViewModel}">
    <Grid Grid.IsSharedSizeScope="True"
          Margin="10 10 10 10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource Header}"
                   Text="Добавление машины" />

        <GroupBox Grid.Row="1"
                  Header="Обязательные параметры"
                  Padding="5"
                  Margin="5">
            <Grid Margin="0 5 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"
                                   SharedSizeGroup="Row" />
                    <RowDefinition Height="auto"
                                   SharedSizeGroup="Row" />
                    <RowDefinition Height="auto"
                                   SharedSizeGroup="Row" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"
                                      SharedSizeGroup="Column" />
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Column" />
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Column" />
                </Grid.ColumnDefinitions>

                <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Название"
                         Grid.Row="0"
                         Grid.Column="0"
                         Margin="5"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Марка"
                         Grid.Row="0"
                         Grid.Column="1"
                         Margin="5"
                         Text="{Binding Stamp, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Вместимость, м3"
                         Grid.Row="0"
                         Grid.Column="2"
                         Margin="5"
                         Text="{Binding LoadCapacity, UpdateSourceTrigger=PropertyChanged}" />

                <ComboBox Grid.Row="1"
                          Grid.Column="0"
                          Style="{StaticResource PlaceholderComboBoxStyle}"
                          Tag="Тип техники"
                          Margin="5"
                          ItemsSource="{Binding TypeMachineArray}"
                          SelectedItem="{Binding TypeMachine}" />

                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource  PlaceholderComboBoxStyle}"
                          Tag="Тип погрузки"
                          Margin="5"
                          ItemsSource="{Binding TypeLoadingArray}"
                          SelectedItem="{Binding TypeLoading}" />

                <StackPanel Grid.Row="1"
                            Grid.Column="2"
                            Margin="5"
                            Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               Margin="3"
                               Text="Гидроборт" />
                    <CheckBox VerticalAlignment="Center"
                              Margin="3"
                              IsChecked="{Binding HydroBoard}" />
                </StackPanel>

                <ComboBox Grid.Row="2"
                          Style="{StaticResource PlaceholderComboBoxStyle}"
                          Tag="Категория"
                          Margin="5"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name" />
            </Grid>
        </GroupBox>


        <Grid Grid.Row="2"
              Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"
                               SharedSizeGroup="Row" />
                <RowDefinition Height="auto"
                               SharedSizeGroup="Row" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"
                                  SharedSizeGroup="Column" />
                <ColumnDefinition Width="auto"
                                  SharedSizeGroup="Column" />
                <ColumnDefinition Width="auto"
                                  SharedSizeGroup="Column" />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Row="0"
                      Grid.Column="0"
                      Style="{StaticResource PlaceholderComboBoxStyle}"
                      Tag="Тип кузова"
                      Margin="5"
                      ItemsSource="{Binding TypeBodyworkArray}"
                      SelectedItem="{Binding TypeBodywork}" />

            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Гос.номер"
                     Grid.Row="0"
                     Grid.Column="1"
                     Margin="5"
                     Text="{Binding StateNumber, UpdateSourceTrigger=PropertyChanged}" />

            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Объём, м3"
                     Grid.Row="0"
                     Grid.Column="2"
                     Margin="5"
                     Text="{Binding Volume, UpdateSourceTrigger=PropertyChanged}" />

            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Длина кузова, м"
                     Grid.Row="1"
                     Grid.Column="0"
                     Margin="5"
                     Text="{Binding LengthBodywork}" />

            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Ширина кузова, м"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"
                     Text="{Binding WidthBodywork}" />

            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Высота кузова, м"
                     Grid.Row="1"
                     Grid.Column="2"
                     Margin="5"
                     Text="{Binding HeightBodywork}" />

        </Grid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0 25 0 0">
            <Button Content="Добавить"
                    Command="{Binding SubmitCommand}" />
            <Button Margin="10 0 0 0"
                    Content="Отмена"
                    Command="{Binding CancelCommand}" />
        </StackPanel>

    </Grid>
</UserControl>