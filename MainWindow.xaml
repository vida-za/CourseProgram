<Window x:Class="CourseProgram.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CourseProgram.Views"
        xmlns:vms="clr-namespace:CourseProgram.ViewModels"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow"
        MinHeight="400"
        MinWidth="800"
        Height="auto"
        Width="auto"
        SizeToContent="WidthAndHeight"
        FontSize="14">

    <Grid MaxWidth="600"
          Margin="20 10">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:DriverListingViewModel}">
                <views:DriverListingView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AddDriverViewModel}">
                <views:AddDriverView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DriverViewModel}">
                <views:DriverView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </Grid>

</Window>